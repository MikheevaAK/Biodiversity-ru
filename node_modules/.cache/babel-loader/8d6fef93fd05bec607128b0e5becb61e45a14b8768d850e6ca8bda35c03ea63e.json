{"ast":null,"code":"import BaseHero from '@/layout/BaseHero.vue';\nimport MainSection from '@/layout/MainSection';\nimport BaseTextBlock from '@/components/BaseTextBlock.vue';\nimport BaseNumberBlock from '@/components/BaseNumberBlock.vue';\nimport { Swiper, SwiperSlide } from 'swiper/vue';\nimport { Navigation } from 'swiper/modules';\nimport 'swiper/css';\nimport 'swiper/css/navigation';\nimport gsap from \"gsap\";\nimport ScrollTrigger from \"gsap/ScrollTrigger\";\ngsap.registerPlugin(ScrollTrigger);\nexport default {\n  components: {\n    BaseHero,\n    MainSection,\n    BaseTextBlock,\n    BaseNumberBlock,\n    Swiper,\n    SwiperSlide\n  },\n  data() {\n    return {\n      heroDescr: 'Результатом российских экспедиций в&nbsp;Арктику на&nbsp;протяжении четырёх столетий стали не&nbsp;только значимые научные открытия. Важная сторона истории&nbsp;&mdash; погружение в&nbsp;культурный контекст и&nbsp;попытка художественного осмысления созданных природой образов Севера.'\n    };\n  },\n  setup() {\n    return {\n      modules: [Navigation]\n    };\n  },\n  mounted() {\n    this.$nextTick(function () {\n      this.scrollAnimation();\n    });\n  },\n  methods: {\n    scrollAnimation() {\n      const collageItems = Array.from(document.querySelectorAll(\".text-block__wrap\"));\n      collageItems.forEach(elem => {\n        this.oneScrollTrigger = gsap.fromTo(elem, {\n          y: 50\n        }, {\n          y: 0,\n          duration: 1,\n          scrollTrigger: {\n            start: '0% 100%',\n            end: 'bottom 75%',\n            trigger: elem,\n            scrub: true\n            // markers: true,\n          }\n        });\n      });\n      const sidebarItems = Array.from(document.querySelectorAll(\".sidebar\"));\n      sidebarItems.forEach(elem => {\n        this.twoScrollTrigger = gsap.fromTo(elem, {\n          y: 50\n        }, {\n          y: 0,\n          duration: 1,\n          scrollTrigger: {\n            start: '0% 100%',\n            end: 'bottom 75%',\n            trigger: elem,\n            // markers: true,\n            scrub: true\n          }\n        });\n      });\n    }\n  }\n};","map":{"version":3,"names":["BaseHero","MainSection","BaseTextBlock","BaseNumberBlock","Swiper","SwiperSlide","Navigation","gsap","ScrollTrigger","registerPlugin","components","data","heroDescr","setup","modules","mounted","$nextTick","scrollAnimation","methods","collageItems","Array","from","document","querySelectorAll","forEach","elem","oneScrollTrigger","fromTo","y","duration","scrollTrigger","start","end","trigger","scrub","sidebarItems","twoScrollTrigger"],"sources":["src/pages/ArtPage.vue"],"sourcesContent":["<template>\n    <div class=\"art\">\n        <BaseHero title=\"Исследователь и&nbsp;художник: искусство в&nbsp;экспедиции\" :descr=\"heroDescr\"\n            :img=\"'img/hero10.jpg'\" :imgMobile=\"'img/hero10-mobile.jpg'\" />\n        <MainSection>\n            <BaseTextBlock class=\"mb-40\">\n                <span>\n                    <p class=\"mb-10\">\n                        Все грани отношений человека и&nbsp;арктической природы демонстрирует подготовленный при\n                        поддержке компании &laquo;Норникель&raquo; масштабный выставочный проект &laquo;Исследователь\n                        и&nbsp;художник: искусство в&nbsp;экспедиции&raquo;.\n                    </p>\n                    <p>\n                        Выставка приурочена к&nbsp;завершению второго года совместного проекта &laquo;Норникеля&raquo;\n                        и&nbsp;СО&nbsp;РАН по&nbsp;исследованию биоразнообразия &laquo;Большая Научная\n                        экспедиция&raquo;. Это исследование стало уникальным благодаря своему масштабу. В&nbsp;России\n                        подобных исследований не&nbsp;проводилось за&nbsp;весь постсоветский период.\n                    </p>\n                </span>\n                <div class=\"art__position-info-open\">\n                    Открываем <br /> Арктику вместе\n                </div>\n            </BaseTextBlock>\n\n            <div class=\"art__youtube-video mb-100\">\n                <!-- <iframe width=\"100%\" height=\"100%\" frameborder=\"0\" allowfullscreen\n                    :src=\"`https://www.youtube.com/embed/snEfjPiaNRg?modestbranding=0&controls=0&showinfo=0&rel=0&showinfo=0`\">\n                </iframe> -->\n            </div>\n\n            <BaseTextBlock class=\"mb-100\">\n                <span>\n                    <p class=\"mb-10\">\n                        Выставочный проект удалось реализовать благодаря совместной работе компании\n                        &laquo;Норникель&raquo;, Сибирского отделения РАН, парка &laquo;Зарядье&raquo;, Государственного\n                        Дарвиновского музея и&nbsp;РГХПУ им. С.&nbsp;Г.&nbsp;Строганова.\n                    </p>\n                    <p class=\"mb-10\">\n                        Главная цель проекта&nbsp;&mdash; популяризация среди широкой общественности кросс-культурной\n                        связки природы и&nbsp;человека, науки и&nbsp;искусства.\n                    </p>\n                    <p>\n                        Экспонаты предоставили ведущие тематические музеи России и&nbsp;частные коллекционеры. Зрители\n                        увидели артефакты времён царя Алексея Михайловича и&nbsp;современные перформансы\n                        от&nbsp;участников Красноярской, Якутской и&nbsp;Московской биеннале современного искусства.\n                    </p>\n                </span>\n                <div class=\"position-info\">\n                    <BaseNumberBlock textTop=\"413\" textBottom=\"экспонатов собрано в рамках выставочного проекта \" />\n                </div>\n            </BaseTextBlock>\n\n            <div class=\"mb-100\">\n                Для нашей компании очень важна триада &laquo;наука&nbsp;&mdash; искусство&nbsp;&mdash; культура&raquo;.\n                Мы&nbsp;хотим, чтобы результаты наших экспедиций были доступны, понятны и&nbsp;донесены\n                до&nbsp;максимально большого количества людей. Приятно, что собранные объекты могут показать всю историю\n                и&nbsp;все грани отношения человека к&nbsp;Арктике.\n            </div>\n\n            <BaseTextBlock class=\"mb-100\" title=\"Участники\">\n                <span>\n                    Проект носит междисциплинарный и&nbsp;кросс-культурный характер. В&nbsp;проекте\n                    и&nbsp;научно-просветительской программе приняли участие художественные галереи, музеи\n                    и&nbsp;природные заповедники.\n                </span>\n            </BaseTextBlock>\n\n            <BaseTextBlock class=\"mb-40\" title=\"Выставка в парке «Зарядье»\">\n                <span>\n                    <p class=\"mb-10\">\n                        В&nbsp;павильоне &laquo;Заповедное посольство&raquo; представлены работы Science Art. Это\n                        попытка современных художников исследовать экосистемы и&nbsp;творчески переосмыслить проблемы\n                        промышленных территорий, состояния воды и&nbsp;в&nbsp;целом хрупкого биоценоза арктических\n                        земель. Работы отсылают к&nbsp;примитивному и&nbsp;первозданному, напоминают о&nbsp;мире\n                        абсолютной гармонии между человеком и&nbsp;природой и&nbsp;заставляют задуматься\n                        о&nbsp;механизмах приспособления и&nbsp;адаптации природы к&nbsp;индустриальной среде.\n                    </p>\n                    <p class=\"mb-10\">\n                        В&nbsp;Старом Английском дворе, где некогда планировались первые экспедиции в&nbsp;Арктику,\n                        зрителям показали исторические экспонаты: гравированные и&nbsp;рукописные карты, рисунки\n                        и&nbsp;путевые дневники учёных и&nbsp;художников, а&nbsp;также этнографическую коллекцию.\n                    </p>\n                    <p>\n                        Особое место в&nbsp;экспозиции заняли картины первого художника за&nbsp;Полярным\n                        кругом&nbsp;&mdash; Александра Борисова. Из&nbsp;архангельского Музея художественного освоения\n                        Арктики, который носит имя живописца-полярника, в&nbsp;Москву привезли 16&nbsp;оригинальных\n                        полотен, написанных им&nbsp;на&nbsp;Новой Земле более века назад.\n                    </p>\n                </span>\n                <div class=\"art__position-info-open\">\n                    Три выставочные <br/>площадки\n                </div>\n            </BaseTextBlock>\n\n            <div class=\"art__swiper-wrap\">\n                <swiper\n                    class=\"art__swiper\"\n                    \n                    :navigation=\"true\" :modules=\"modules\"\n                    :loop=\"true\"\n                    :slides-per-view=\"1\"\n                    :space-between=\"50\"\n                >\n                    <SwiperSlide :lazy=\"true\">\n                        <img src=\"../../public/img/art/swiper-1.jpg\" loading=\"lazy\" />\n                    </SwiperSlide>\n                    <SwiperSlide :lazy=\"true\">\n                        <img src=\"../../public/img/art/swiper-2.jpg\" loading=\"lazy\" />\n                    </SwiperSlide>\n                    <SwiperSlide :lazy=\"true\">\n                        <img src=\"../../public/img/art/swiper-3.jpg\" loading=\"lazy\" />\n                    </SwiperSlide>\n                    <SwiperSlide :lazy=\"true\">\n                        <img src=\"../../public/img/art/swiper-4.jpg\" loading=\"lazy\" />\n                    </SwiperSlide>\n                </swiper>\n\n                <!-- <swiper :navigation=\"true\" :modules=\"modules\" class=\"art__swiper\">\n                    <swiper-slide>Slide 1</swiper-slide>\n                    <swiper-slide>Slide 2</swiper-slide><swiper-slide>Slide 3</swiper-slide>\n                    <swiper-slide>Slide 4</swiper-slide><swiper-slide>Slide 5</swiper-slide>\n                    <swiper-slide>Slide 6</swiper-slide><swiper-slide>Slide 7</swiper-slide>\n                    <swiper-slide>Slide 8</swiper-slide><swiper-slide>Slide 9</swiper-slide>\n                </swiper> -->\n\n            </div>\n\n        </MainSection>\n    </div>\n</template>\n\n<script>\nimport BaseHero from '@/layout/BaseHero.vue'\nimport MainSection from '@/layout/MainSection'\nimport BaseTextBlock from '@/components/BaseTextBlock.vue'\nimport BaseNumberBlock from '@/components/BaseNumberBlock.vue'\n\nimport { Swiper, SwiperSlide } from 'swiper/vue';\nimport { Navigation } from 'swiper/modules';\n\nimport 'swiper/css';\nimport 'swiper/css/navigation';\n\nimport gsap from \"gsap\";\nimport ScrollTrigger from \"gsap/ScrollTrigger\";\ngsap.registerPlugin(ScrollTrigger);\n\nexport default {\n    components: {\n        BaseHero,\n        MainSection,\n        BaseTextBlock,\n        BaseNumberBlock,\n        Swiper,\n        SwiperSlide,\n    },\n    data() {\n        return {\n            heroDescr: 'Результатом российских экспедиций в&nbsp;Арктику на&nbsp;протяжении четырёх столетий стали не&nbsp;только значимые научные открытия. Важная сторона истории&nbsp;&mdash; погружение в&nbsp;культурный контекст и&nbsp;попытка художественного осмысления созданных природой образов Севера.',\n        }\n    },\n    setup() {\n      return {\n        modules: [Navigation],\n      };\n    },\n    mounted() {\n        this.$nextTick(function () {\n            this.scrollAnimation()\n        })\n    },\n    methods: {\n        scrollAnimation() {\n            const collageItems = Array.from(document.querySelectorAll(\".text-block__wrap\"));\n            collageItems.forEach((elem) => {\n\n                this.oneScrollTrigger = gsap.fromTo(elem,\n                    {\n                        y: 50,\n                    },\n                    {\n                        y: 0,\n                        duration: 1,\n                        scrollTrigger: {\n                            start: '0% 100%',\n                            end: 'bottom 75%',\n                            trigger: elem,\n                            scrub: true,\n                            // markers: true,\n                        },\n                    });\n            });\n\n            const sidebarItems = Array.from(document.querySelectorAll(\".sidebar\"));\n            sidebarItems.forEach((elem) => {\n                this.twoScrollTrigger = gsap.fromTo(elem,\n                    {\n                        y: 50,\n                    },\n                    {\n                        y: 0,\n                        duration: 1,\n                        scrollTrigger: {\n                            start: '0% 100%',\n                            end: 'bottom 75%',\n                            trigger: elem,\n                            // markers: true,\n                            scrub: true,\n                        },\n                    });\n            });\n        },\n    }\n}\n</script>\n\n<style lang=\"scss\">\n.art {\n    &__position-info-open {\n        position: absolute;\n        top: 0;\n        left: -24.4rem;\n\n        color: var(--blue-deep, #004C97);\n        font-size: 2.125rem;\n        font-weight: 600;\n        line-height: 130%;\n    }\n\n    &__youtube-video {\n        width: 83.4375rem;\n        height: 37.5rem;\n        margin: 0 auto;\n        border-radius: 30px;\n        overflow: hidden;\n    }\n\n    &__swiper {\n        width: 100%;\n        height: 37.5rem;\n        border-radius: 16px;\n\n        &-wrap {\n            width: 83.4375rem;\n            margin: 0 auto;\n        }\n\n        .swiper-slide {\n            border-radius: 16px;\n            overflow: hidden;\n            width: 100%;\n            height: 100%;\n        }\n\n        .swiper-button-prev,\n        .swiper-button-next {\n            width: 4.6875rem;\n            height: 4.6875rem;\n            background-color: red;\n\n            &::after {\n                width: 100%;\n                height: 100%;\n            }\n        }\n    }\n}\n</style>"],"mappings":"AAoIA,OAAAA,QAAA;AACA,OAAAC,WAAA;AACA,OAAAC,aAAA;AACA,OAAAC,eAAA;AAEA,SAAAC,MAAA,EAAAC,WAAA;AACA,SAAAC,UAAA;AAEA;AACA;AAEA,OAAAC,IAAA;AACA,OAAAC,aAAA;AACAD,IAAA,CAAAE,cAAA,CAAAD,aAAA;AAEA;EACAE,UAAA;IACAV,QAAA;IACAC,WAAA;IACAC,aAAA;IACAC,eAAA;IACAC,MAAA;IACAC;EACA;EACAM,KAAA;IACA;MACAC,SAAA;IACA;EACA;EACAC,MAAA;IACA;MACAC,OAAA,GAAAR,UAAA;IACA;EACA;EACAS,QAAA;IACA,KAAAC,SAAA;MACA,KAAAC,eAAA;IACA;EACA;EACAC,OAAA;IACAD,gBAAA;MACA,MAAAE,YAAA,GAAAC,KAAA,CAAAC,IAAA,CAAAC,QAAA,CAAAC,gBAAA;MACAJ,YAAA,CAAAK,OAAA,CAAAC,IAAA;QAEA,KAAAC,gBAAA,GAAAnB,IAAA,CAAAoB,MAAA,CAAAF,IAAA,EACA;UACAG,CAAA;QACA,GACA;UACAA,CAAA;UACAC,QAAA;UACAC,aAAA;YACAC,KAAA;YACAC,GAAA;YACAC,OAAA,EAAAR,IAAA;YACAS,KAAA;YACA;UACA;QACA;MACA;MAEA,MAAAC,YAAA,GAAAf,KAAA,CAAAC,IAAA,CAAAC,QAAA,CAAAC,gBAAA;MACAY,YAAA,CAAAX,OAAA,CAAAC,IAAA;QACA,KAAAW,gBAAA,GAAA7B,IAAA,CAAAoB,MAAA,CAAAF,IAAA,EACA;UACAG,CAAA;QACA,GACA;UACAA,CAAA;UACAC,QAAA;UACAC,aAAA;YACAC,KAAA;YACAC,GAAA;YACAC,OAAA,EAAAR,IAAA;YACA;YACAS,KAAA;UACA;QACA;MACA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}